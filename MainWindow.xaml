<Window x:Class="_3D_visualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3D_visualizer"
        mc:Ignorable="d" Loaded="Window_Loaded"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        
        <Canvas x:Name="canvas"  Grid.Column="0"/>

        <StackPanel Grid.Column="1">
            <StackPanel Orientation="Horizontal">
                <CheckBox Checked="persp_Checked" Unchecked="CheckBox_Unchecked"/>
                <TextBlock Text="Perspective" Margin="10,0,0,0"/>
            </StackPanel>
            <TextBlock Text="X Rotation" HorizontalAlignment="Center"/>
            <Slider x:Name="RotXSlider" Minimum="0" Maximum="360" TickFrequency="1" IsSnapToTickEnabled="True" Value="0" ValueChanged="RotXSlider_ValueChanged"/>
            <TextBlock Text="" x:Name="tester"/>
        </StackPanel>
    </Grid>
</Window>
